<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hospital_appointment_date_form" model="ir.ui.view">
        <field name="name">hospital.appointment.date.form</field>
        <field name="model">hospital.appointment.date</field>
        <field name="arch" type="xml">
            <form string="Appointment Date">
                <sheet>
                    <group>
                        <field name="date" required="1"/>
                    </group>
                    <group string="Time Slots">
                        <field name="slot_ids" widget="one2many" nolabel="1">
                            <list>
                                <field name="time"/>
                                <field name="is_booked"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment_date" model="ir.actions.act_window">
        <field name="name">Appointment Dates</field>
        <field name="res_model">hospital.appointment.date</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Click "Create" to add a new appointment date. Predefined time slots will be generated automatically.
            </p>
        </field>
    </record>

    <menuitem id="menu_hospital_root" name="Hospital Management"/>

    <!--    <menuitem id="menu_hospital_appointment" name="Appointments" parent="menu_hospital_root"/>-->

    <menuitem id="menu_hospital_appointment_date" name="Appointment Dates"
              parent="hospital_menu_root" action="action_hospital_appointment_date"/>
</odoo>
