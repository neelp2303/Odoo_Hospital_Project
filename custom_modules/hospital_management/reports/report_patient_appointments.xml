<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_appointments">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="patient">
                <div class="page" style="font-family: 'Arial', sans-serif; max-width: 800px; margin: 0 auto; padding: 20px; background-color: #f9f9f9;">
                    <!-- Header with Hospital Logo and Title -->
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; border-bottom: 2px solid #3498db; padding-bottom: 15px;">
                        <div>
                            <h1 style="color: #2c3e50; margin: 0; font-size: 24px;">Hospital Patient Report</h1>
                            <p style="color: #7f8c8d; margin: 5px 0 0;">Comprehensive Patient Overview</p>
                        </div>
                        <!-- Hospital Logo -->
                        <div style="width: 120px; height: 120px; background-color: #3498db; color: white; display: flex; align-items: center; justify-content: center; border-radius: 8px;">
                            <img t-att-src="'/web/static/src/icon.png'"/>
                        </div>
                    </div>

                    <!-- Patient Information Section -->
                    <div style="display: flex; background-color: white; border-radius: 8px; padding: 20px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin-bottom: 20px;">
                        <!-- Patient Image -->
                        <div style="width: 200px; margin-right: 20px; flex-shrink: 0;">
                            <t t-if="patient.image">
                                <img t-att-src="'data:image/png;base64,%s' % patient.image" style="max-width: 200px; max-height: 200px; border-radius: 8px; object-fit: cover;"/>
                            </t>
                            <t t-else="">
                                <div style="width: 200px; height: 200px; background-color: #ecf0f1; display: flex; align-items: center; justify-content: center; border-radius: 8px; color: #7f8c8d;">
                                    No Image Available
                                </div>
                            </t>
                        </div>

                        <!-- Patient Details -->
                        <div style="flex-grow: 1; display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                            <p><strong style="color: #34495e;">Name:</strong> <t t-esc="patient.name or 'N/A'" style="color: #2c3e50;"/></p>
                            <p><strong style="color: #34495e;">Age:</strong> <t t-esc="patient.age or 'N/A'" style="color: #2c3e50;"/></p>
                            <p><strong style="color: #34495e;">Gender:</strong> <t t-esc="patient.gender or 'N/A'" style="color: #2c3e50;"/></p>
                            <p><strong style="color: #34495e;">Contact:</strong> <t t-esc="patient.contact_number or 'N/A'" style="color: #2c3e50;"/></p>
                            <p><strong style="color: #34495e;">Doctor Assigned:</strong> <t t-esc="patient.doctor_id.name or 'N/A'" style="color: #2c3e50;"/></p>
                            <p><strong style="color: #34495e;">Admission Date:</strong> <t t-esc="patient.admission_date or 'N/A'" style="color: #2c3e50;"/></p>
                        </div>
                    </div>

                    <!-- Appointments Section -->
                    <div style="background-color: white; border-radius: 8px; padding: 20px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                        <h2 style="color: #2980b9; border-bottom: 1px solid #ecf0f1; padding-bottom: 10px; margin-top: 0;">Appointment History</h2>
                        <table style="width: 100%; border-collapse: collapse; margin-top: 15px;">
                            <thead>
                                <tr style="background-color: #3498db; color: white;">
                                    <th style="padding: 10px; text-align: left; border: 1px solid #2980b9;">Date</th>
                                    <th style="padding: 10px; text-align: left; border: 1px solid #2980b9;">Doctor</th>
                                    <th style="padding: 10px; text-align: left; border: 1px solid #2980b9;">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="patient.appointment_id" t-as="appointment">
                                    <tr style="border-bottom: 1px solid #ecf0f1;">
                                        <td style="padding: 10px; color: #2c3e50;"><t t-esc="appointment.appointment_date or 'N/A'"/></td>
                                        <td style="padding: 10px; color: #2c3e50;"><t t-esc="appointment.doctor_id.name or 'N/A'"/></td>
                                        <td style="padding: 10px;">
                                            <span t-attf-style="color: #{appointment.status == 'confirmed' and '#27ae60' or appointment.status == 'cancelled' and '#e74c3c' or '#f39c12'}">
                                                <t t-esc="appointment.status or 'N/A'"/>
                                            </span>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <!-- Footer -->
                    <div style="margin-top: 20px; text-align: center; color: #7f8c8d; font-size: 12px; border-top: 1px solid #ecf0f1; padding-top: 10px;">
                        <p>Generated on <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/> | Hospital Management System</p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>